    var ageRanges = [ 'a7', 'a14', 'a21', 'a30', 'a44', 'a60', 'a75', 'a90', 'a120', 'a180', 'a365', 'a-1', 'a-1001', 'a-1002', 'a-1003', 'a-1004' ];
    function getData(s, n) {
        var data = new Array();
        for (var i = 0; i < n; i++) {
            var idx = i + s;
            data[2 * i] =
                    {
                        field: ageRanges[idx],
                        title: '数量',
                        align: 'right',
                        width: 50,
                        formatter: function (value, row, index) {
                            var age = value.age;
                            if (age == -1 || age == -1002 || age > 60)
                                return '<span style="color:red;">' + value.stockQuantity + '</span>';
                            else if (age == -1004)
                                return value.stockQuantity + '%';
                            else
                                return value.stockQuantity;
                        }
                    };
            data[2 * i + 1] =
                    {
                        field: 'a' + ageRanges[idx],
                        title: '金额',
                        align: 'right',
                        formatter: function (value, row, index) {
                            var age = value.age;
                            if (age == -1 || age == -1002 || age > 60)
                                return '<span style="color:red;">' + value.value + '</span>';
                            else if (age == -1004)
                                return value.value + '%';
                            else return value.value;
                        }
                    };
        }
        return data;
    }
    $(function () {
        var select=$!select;
        $('#selectType'+select).attr("checked",true);
    })
    var dataGrid;
    $(function () {
        var now = new Date();
        /*$('#date').datebox('setValue', myformatter(now));*/
        $('#date').datebox('calendar').calendar({
            validator: function (date) {
                var d2 = new Date(now.getFullYear(), now.getMonth(), now.getDate());
                return  date <= d2;
            }
        });
        dataGrid = $('#dataGrid').datagrid({
            url: '/stock/findStockAgeGroupByProduct.html',
            fit: true,
            fitColumns: false,
            pagination: false,
            toolbar: $('#tb'),
            nowrap: true,
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                date: $('#date').val(),
                channel:$('#channel_code').val()
            },
            frozenColumns: [
                [
                    {
                        field: 'productType',
                        title: '品类',
                        width: 80,
                        align: 'center',
                        rowspan: 2,
                        formatter: function (value, row, index) {
                            if (index == 0)
                                return '总计';
                            if (row.productType=='total')
                                return '';
                            else
                                return row.productType;
                        }
                    } ,
                    {
                        field: 'productGroup',
                        title: '产品组',
                        width: 90,
                        align: 'center',
                        rowspan: 2,
                        formatter: function (value, row, index) {
                            if (index == 0)
                                return '';
                            else
                                return row.productGroup;
                        }
                    } ,
                    {
                        title: '1-7天',
                        align: 'center',
                        colspan: 2,
                    },
                    {
                        title: '8-14天',
                        align: 'center',
                        colspan: 2,
                    },
